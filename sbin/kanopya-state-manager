=head1 NAME

kanopya-state-manager

=head1 SYNOPSIS

    $ ./kanopya-state-manager

=head1 DESCRIPTION


=head1 METHODS

=cut

use strict;
use warnings;
use Kanopya::Config;
use StateManager;
use Log::Log4perl "get_logger";

my $dir = Kanopya::Config::getKanopyaDir();
Log::Log4perl->init($dir.'/kanopya/conf/state-manager-log.conf');
my $log = get_logger("");


my $running = 1;

sub signalHandler {
    my ($sig) = @_;
    $log->debug($sig." received : stopping main loop");
    $running = 0;
}

$SIG{TERM} = \&signalHandler;

eval {
    my $statemanager = StateManager->new();

    $log->info("Starting main loop");
    # enter in the main loop and continue while $$running is true
    $statemanager->run(\$running);
};
if ($@) {
    $log->error("$@");
};

$log->warn("kanopya-state-manager stopped");


__END__

