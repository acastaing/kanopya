use strict;
use warnings;

use OpenstackSync;
use Kanopya::Config;

use Getopt::Std;
use Log::Log4perl 'get_logger';

my $dir = Kanopya::Config::getKanopyaDir();
Log::Log4perl->init($dir . '/conf/openstack-sync-log.conf');
my $log = get_logger("");

sub print_usage {
    print "Usage: kanopya-openstack-sync\n";
    print "       kanopya-openstack-sync [-b|--background] [-p pidfile]\n";
    exit(1);
}

my %opts = ();
getopts("bp:", \%opts) or print_usage;

my $s = OpenstackSync->new();
$s->run(name       => "kanopya-openstack-sync",
        daemonize  => $opts{b},
        pidfile    => $opts{p});

$log->warn("kanopya-openstack-sync stopped");
