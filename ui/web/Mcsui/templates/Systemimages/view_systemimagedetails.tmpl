<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">@import url(/css/details.css);</style>
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/details.js"></script>
<div id="content">
<h2>System image : <TMPL_VAR NAME=systemimage_name></h2>
<hr/>
<span id="state" class="title simpleexpand">State</span>
<table id="Xstate" class="detailspart">
<tr><TMPL_IF NAME=active><td>Active</td><TMPL_ELSE><td>Deactivated</td></TMPL_IF>
<td class="actions">
<TMPL_IF NAME=link_activate>
<a class="imgActivate" href="/cgi/mcsui.cgi/systemimages/process_activatesystemimage?systemimage_id=<TMPL_VAR NAME=systemimage_id>">activate</a><br />
<span class="desc">Activate this system image.</span><br />
<TMPL_ELSE>
<a class="imgDeactivate" href="/cgi/mcsui.cgi/systemimages/process_deactivatesystemimage?systemimage_id=<TMPL_VAR NAME=systemimage_id>">deactivate</a><br />
<span class="desc">Deactivate this system image.</span><br />
</TMPL_IF>
</td></tr>
</table>

<hr/>
<span id="settings" class="title simpleexpand">Main settings</span>
<table id="Xsettings" class="detailspart">
<tr><td class="italic" colspan="2"><TMPL_VAR NAME=systemimage_desc></td>
<td class="actions" rowspan="4">
<a class="imgEdit" href="javascript:openform('/cgi/mcsui.cgi/systemimages/form_editsystemimage?systemimage_id=<TMPL_VAR NAME=systemimage_id>', 'edit systemimage', 800, 400, '');">edit</a><br />
<span class="desc">Modify these global parameters.</span><br /><br />
<TMPL_IF NAME=link_delete>
<a class="imgRemove" href="/cgi/mcsui.cgi/systemimage/process_deletesystemimage?systemimage_id=<TMPL_VAR NAME=systemimage_id>">delete</a><br />
<span class="desc">Delete this system image.</span><br />
</TMPL_IF>
</td><tr/>
<tr><td colspan="2">&nbsp;</td></tr>
<tr><td class="label">Distribution :</td><td><TMPL_VAR NAME=distribution></td></tr>
</table>

<hr/>
<span id="components" class="title simpleexpand">Installed Components</span>
<table id="Xcomponents" class="detailspart list">
<TMPL_IF NAME=components_list>
<tr><td colspan="2">&nbsp;</td>
<td class="actions" rowspan="<TMPL_VAR NAME=components_count>">
<a class="imgAdding" href="javascript:openform('/cgi/mcsui.cgi/systemimages/form_installcomponent?cluster_id=<TMPL_VAR NAME=cluster_id>', 'Component Installation', 500, 200, '');">Install a component</a><br />
<span class="desc">Install a component to this system image.</span><br /><br />
</td></tr>
<TMPL_LOOP NAME=components_list>
<tr><td class="label2"><span class="bold"><TMPL_VAR NAME=component_name><TMPL_VAR NAME=component_version></span> - <TMPL_VAR NAME=component_category></td>
<td class="action"><a class="imgRemove" href="<TMPL_VAR NAME=component_id>">remove</a>
</td></tr>
</TMPL_LOOP>
<TMPL_ELSE>
<tr><td colspan="2">no defined component.</td>
<td class="actions">
<a class="imgAdding" href="javascript:openform('/cgi/mcsui.cgi/clusters/form_addcomponent?cluster_id=<TMPL_VAR NAME=cluster_id>', 'Add a component', 500, 200, '');">add a component</a><br />
<span class="desc">Add a new component to this cluster.</span><br /><br />
</td></tr>
</TMPL_IF>
</table>


</div>
<TMPL_INCLUDE NAME="footer.tmpl">
