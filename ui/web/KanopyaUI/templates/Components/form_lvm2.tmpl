<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Lvm2 Configuration</h2>
<hr />
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<input class="conf_simple_value" type="hidden" name="lvm2_vg_id" value="<TMPL_VAR NAME=lvm2_vg_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="Lvm2"/>
<table>
<tr><td>vg name: </td><td><TMPL_VAR NAME=lvm2_vg_name></td></tr>
<tr><td>vg size: </td><td><TMPL_VAR NAME=lvm2_vg_size></td></tr>
<tr><td>vg free space: </td><td><TMPL_VAR NAME=lvm2_vg_freespace></td></tr>
</table>

<hr />
<h3>Logical volumes</h3>
	<table>
		<tr><th>Name</th><th>Size</th><th>Free space</th><th>File system</th></tr>
		<TMPL_LOOP NAME=lvm2_lvs>
			<tr>
				<td><TMPL_VAR NAME=lvm2_lv_name></td>
				<td><TMPL_VAR NAME=lvm2_lv_size></td>
				<td><TMPL_VAR NAME=lvm2_lv_freespace></td>
				<td><TMPL_VAR NAME=lvm2_lv_filesystem></td>
				<td class="hidden"><TMPL_VAR NAME=lvm2_lv_id></td>
			</tr>
		</TMPL_LOOP>
	</table>

<hr />
<div class="right">
<input type="button" value="ok" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=cluster_id>'"/>
</div>
</form>
</div>

