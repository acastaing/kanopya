<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Snmpd5 Configuration</h2>
<hr />
<form method="POST" action="/cgi/kanopya.cgi/components/process_configurecomponent">
<input type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input type="hidden" name="snmpd5_id" value="<TMPL_VAR NAME=snmpd5_id>"/>
<input type="hidden" name="component_name" value="Snmpd5"/>
<input type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<table>
<tr><td>Monitor server ip :</td><td><input type="text" name="monitor_server_ip" value="<TMPL_VAR NAME=monitor_server_ip>" disabled /></td></tr>
<tr><td>snmpd options :</td><td><input type="text" name="snmpd_options" size="64" value="<TMPL_VAR NAME=snmpd_options>" disabled /></td></tr>
</table>
<hr />
<div class="right">
<input type="submit" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=CLUSTER_ID>'"/>
</div>
</form>
</div>
