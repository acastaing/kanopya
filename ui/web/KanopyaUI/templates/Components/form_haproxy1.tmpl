<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/extern/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - HAProxy1 Configuration</h2>
<hr />
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<input class="conf_simple_value" type="hidden" name="haproxy1_id" value="<TMPL_VAR NAME=haproxy1_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="HAProxy1"/>

<h3>HTTP binding</h3>
<p>
Frontend port: <input class="conf_simple_value" type="text" name="haproxy1_http_frontend_port" value="<TMPL_VAR NAME=haproxy1_http_frontend_port>" />
 -> Backend port: <input class="conf_simple_value" type="text" name="haproxy1_http_backend_port" value="<TMPL_VAR NAME=haproxy1_http_backend_port>" />
</p>
<h3>HTTPS binding</h3>
<p>
Frontend port: <input class="conf_simple_value" type="text" name="haproxy1_https_frontend_port" value="<TMPL_VAR NAME=haproxy1_https_frontend_port>" />
-> Backend port: <input class="conf_simple_value" type="text" name="haproxy1_https_backend_port" value="<TMPL_VAR NAME=haproxy1_https_backend_port>" />
</p>

<h3>Logger</h3>
ip[:port] <input class="conf_simple_value" type="text" name="haproxy1_log_server_address" value="<TMPL_VAR NAME=haproxy1_log_server_address>" />

<div class="right">
<input id="save_button" type="button" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=cluster_id>'"/>
</div>
</form>
</div>

<div class="hidden" id="models">

</div>

<TMPL_INCLUDE NAME="footer.tmpl">

