<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/extern/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Iptables1 Configuration</h2>
<hr />
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<input class="conf_simple_value" type="hidden" name="iptables1_sec_rule_id" value="<TMPL_VAR NAME=iptables1_sec_rule_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="Iptables1"/>




<table border=0>
   <tr>
   <td></td>
   <td>Activate Protection against the following attacks</td>
   </tr>
   <tr>
		<td><input class="conf_simple_value" type="checkbox" name="iptables1_sec_rule_syn_flood"  <TMPL_IF NAME=iptables1_sec_rule_syn_flood>checked</TMPL_IF>/></td>
		<td>Syn_Flood</td>
   </tr>
 
   <tr>
   		<td><input class="conf_simple_value" type="checkbox" name="iptables1_sec_rule_scan_furtif"  <TMPL_IF NAME=iptables1_sec_rule_scan_furtif >checked</TMPL_IF>/></td>
   		<td>Scan_Fortif</td>
   </tr>

   <tr>
   		<td><input class="conf_simple_value" type="checkbox" name="iptables1_sec_rule_ping_death"  <TMPL_IF NAME=iptables1_sec_rule_ping_death>checked</TMPL_IF>/></td>
   		<td>Ping_Death</td>
   </tr>

	<tr>  
		<td><input class="conf_simple_value" type="checkbox" name="iptables1_sec_rule_anti_spoofing"  <TMPL_IF NAME=iptables1_sec_rule_anti_spoofing>checked</TMPL_IF>/></td>
		<td>Anti_Spoofing</td>
   </tr>
   <tr>
   <td></td>
   <td>Filter the following protocols </td>
   </tr>
</table>
<table class="conf_array_value" id="iptables1_components">
    <TMPL_LOOP NAME=iptables1_components>
    <tr class="elem_iptables1_components" name="component">
    	<th><TMPL_VAR NAME=component_name> : </th>
    	<td><input class="component_simple_value" type="checkbox" name="iptables1_component_cible"  <TMPL_IF NAME=component_checked>checked</TMPL_IF>/></td>
    	<td><input class="component_simple_value" type="hidden" name="iptables1_component_instance_id" value="<TMPL_VAR NAME=iptables1_component_instance_id>"/></td>
    	
    </tr>
    </TMPL_LOOP>     
</table>



<div class="right">
<input id="save_button" type="button" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=cluster_id>'"/>
</div>
</form>
</div>

<div class="hidden" id="models">

</div>

