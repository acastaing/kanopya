<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Mysql5 Configuration</h2>
<hr />
<form method="POST" action="/cgi/kanopya.cgi/components/process_configurecomponent">
<input type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input type="hidden" name="mysql5_id" value="<TMPL_VAR NAME=mysql5_id>"/>
<input type="hidden" name="component_name" value="Mysql5"/>
<input type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<table>
<tr><td>Port :</td><td><input type="text" name="mysql5_port" value="<TMPL_VAR NAME=mysql5_port>" /></td></tr>
<tr><td>Data directory :</td><td><input type="text" name="mysql5_datadir" size="64" value="<TMPL_VAR NAME=mysql5_datadir>" /></td></tr>
<tr><td>Bind address :</td><td><input type="text" name="mysql5_bindaddress" size="17" value="<TMPL_VAR NAME=mysql5_bindaddress>" /></td></tr>
</table>
<hr />
<div class="right">
<input type="submit" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=CLUSTER_ID>'"/>
</div>
</form>
</div>
