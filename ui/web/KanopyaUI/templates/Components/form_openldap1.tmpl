<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/extern/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Openldap1 Configuration</h2>
<hr />
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>
<input class="conf_simple_value" type="hidden" name="openldap1_id" value="<TMPL_VAR NAME=openldap1_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="Openldap1"/>

<table>
<tr><td>Port :</td><td><input class="conf_simple_value" type="text" name="openldap1_port" size="16" value="<TMPL_VAR NAME=openldap1_port>" /></td></tr>
<tr><td>Data directory :</td><td><input disabled class="conf_simple_value" type="text" name="openldap1_directory" size="50" value="<TMPL_VAR NAME=openldap1_directory>" /></td></tr>
<tr><td>Suffix :</td><td><input class="conf_simple_value" type="text" name="openldap1_suffix" size="50" value="<TMPL_VAR NAME=openldap1_suffix>" /></td></tr>
<tr><td>Admin Ldap :</td><td><input class="conf_simple_value" type="text" name="openldap1_rootdn" size="50" value="<TMPL_VAR NAME=openldap1_rootdn>" /></td></tr>
<tr><td>Password Admin :</td><td><input class="conf_simple_value" type="password" name="openldap1_rootpw" size="16" value="<TMPL_VAR NAME=openldap1_rootpw>" /></td></tr>

</table>
<div class="right">
<input id="save_button" type="button" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=cluster_id>'"/>
</div>
</form>
</div>

<div class="hidden" id="models">

</div>

