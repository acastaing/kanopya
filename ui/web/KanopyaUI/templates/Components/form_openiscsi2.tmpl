<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Open-iscsi 2 Configuration</h2>
<hr />
<!--form method="POST" action="/cgi/kanopya.cgi/components/process_configurecomponent"-->
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="openiscsi2_id" value="<TMPL_VAR NAME=openiscsi2_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="Openiscsi2"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>

<h3>Entry definition : source, destination and filter</h3>
<ul class="conf_array_value" id="entries">
<TMPL_LOOP NAME=entries>
	<li class="elem_entries" name="entry">	
		<select class="entry_simple_value" name="entry_type" selected_value="<TMPL_VAR NAME=type>">
			<option value="source">source</option>
			<option value="destination">destination</option>
			<option value="filter">filter</option>
		</select>
		<input class="entry_simple_value" type="text" name="entry_name" value="<TMPL_VAR NAME=name>"/>
		<a class="remove_entry imgRemove iconAction" ></a>
		<table class="entry_array_value" id="params">
			<TMPL_LOOP NAME=params>
				<tr class="elem_params" name="param">
					<td><input class="param_simple_value" type="text" name="content" value="<TMPL_VAR NAME=content>"/></td>
					<td><a class="remove_param imgRemove iconAction" /></td>
				</tr>
			</TMPL_LOOP>
		</table>
		<a class="add_params imgAdding iconAction"></a>
	</li>
</TMPL_LOOP>
</ul>
<a class="add_entries linkAction" >Add entry</a>

<hr />
<h3>Output configuration</h3>
<table class="conf_array_value" id="logs">
<TMPL_LOOP NAME=logs>
	<tr class="elem_logs" name="log"><td>log</td>
		<td>
		<table class="log_array_value" id="log_params">
		<TMPL_LOOP NAME=params>
			<tr class="elem_log_params" name="log_param" ><td>
				<input class="log_param_simple_value" type="text" name="type" value="<TMPL_VAR NAME=type>"/>
				: <input class="log_param_simple_value" type="text" name="name" value="<TMPL_VAR NAME=name>"/>
			</td>
			<td><a class="remove_log_param imgRemove iconAction"></a></td>
			</tr>
		</TMPL_LOOP>
		</table>
		<a class="add_log_params imgAdding iconAction"></a>
		</td>
	</tr>
</TMPL_LOOP>
</table>
<br/>
<a class="add_logs linkAction" >Add log</a>

<hr />
<div class="right">
<input id="save_button" type="button" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=CLUSTER_ID>'"/>
</div>
</form>
</div>

<div class="hidden" id="models">
	<ul class="conf_array_value" id="entries">
		<li class="elem_entries" name="entry">
		<select class="entry_simple_value" name="entry_type">
			<option value="source">source</option>
			<option value="destination">destination</option>
			<option value="filter">filter</option>
		</select>
		<input class="entry_simple_value" type="text" name="entry_name" value="name"/>
		<a class="remove_entry imgRemove iconAction" ></a>
		<table class="entry_array_value" id="params">
				<tr class="elem_params" name="param">
					<td><input class="param_simple_value" type="text" name="content" value="driver(params)"/></td>
					<td><a class="remove_param imgRemove iconAction" /></td>
				</tr>
		</table>
		<a class="add_params imgAdding iconAction"></a>
		</li>
	</ul>
	
	<table>
	<tr class="elem_logs" name="log"><td>log</td>
		<td>
		<table class="log_array_value" id="log_params">
			<tr class="elem_log_params" name="log_param" ><td>
				<input class="log_param_simple_value" type="text" name="type" value="type"/>
				: <input class="log_param_simple_value" type="text" name="name" value="name"/>
			</td>
			<td><a class="remove_log_param imgRemove iconAction"></a></td>
			</tr>
		</table>
		<a class="add_log_params imgAdding iconAction"></a>
		</td>
	</tr>
	</table>
	
</div>

<TMPL_INCLUDE NAME="footer.tmpl">

