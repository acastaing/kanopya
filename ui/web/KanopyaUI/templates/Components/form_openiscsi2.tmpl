<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<script type="text/javascript" src="/js/extern/jquery.js"></script>
<script type="text/javascript" src="/js/components.js"></script>
<div id="content">
<h2>Cluster <TMPL_VAR NAME=CLUSTER_NAME> - Open-iscsi 2 Configuration</h2>
<hr />
<form class="elem_root" name="conf">
<input class="conf_simple_value" type="hidden" name="component_instance_id" value="<TMPL_VAR NAME=component_instance_id>"/>
<input class="conf_simple_value" type="hidden" name="component_name" value="Openiscsi2"/>
<input class="conf_simple_value" type="hidden" name="cluster_id" value="<TMPL_VAR NAME=cluster_id>"/>

<table class="conf_array_value" id="imports">
<tr><th>Target</th><th>Server</th><th>Port</th><th>Mount point</th><th>Mount options</th><th>Filesystem</th></tr>
<TMPL_LOOP NAME=imports>
	<tr class="elem_imports" name="import">
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_target" value="<TMPL_VAR NAME=openiscsi2_target>"/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_server" value="<TMPL_VAR NAME=openiscsi2_server>"/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_port" value="<TMPL_VAR NAME=openiscsi2_port>"/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_mount_point" value="<TMPL_VAR NAME=openiscsi2_mount_point>"/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_mount_options" value="<TMPL_VAR NAME=openiscsi2_mount_options>"/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_filesystem" value="<TMPL_VAR NAME=openiscsi2_filesystem>"/></td>
	<td><input class="import_simple_value" size="15" type="hidden" name="openiscsi2_id" value="<TMPL_VAR NAME=openiscsi2_id>"/></td>
	<td><a class="remove_import imgRemove iconAction" ></a></td>
	</tr>
</TMPL_LOOP>
</table>
<br/>
<a class="add_imports imgAdding iconAction" >Add import</a>

<hr />
<div class="right">
<input id="save_button" type="button" value="ok"/>
<input type="button" value="cancel" onclick="javascript:document.location='/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=CLUSTER_ID>'"/>
</div>
</form>

</div>

<div class="hidden" id="models">
<table>
	<tr class="elem_imports" name="import">
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_target" value=""/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_server" value=""/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_port" value=""/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_mount_point" value=""/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_mount_options" value=""/></td>
	<td><input class="import_simple_value" size="15" type="text" name="openiscsi2_filesystem" value=""/></td>
	<td><input class="import_simple_value" size="15" type="hidden" name="openiscsi2_id" value=""/></td>
	<td><a class="remove_import imgRemove iconAction" ></a></td>
	</tr>
</table>
</div>

