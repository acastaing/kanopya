<div id="content">

<table id="rules_table" class='simplelisting rulesview'>
	<!--caption>Cluster scaling rules <span class='info'>&nbsp;</span></caption-->
	<caption>Cluster scaling rules</caption>
	<tr id='rules_head'><th colspan='6'>Condition</th><th colspan='2' class='then_head'></th><th>Action</th><th>Node selection</th></tr>
	
	<tr id='rule_model' class="hidden">
		<td class='indicator_name editable_choice' choices='<TMPL_VAR NAME=VAR_CHOICES>'>indicator</td>
		<td class='trans_func editable_choice' choices='mean,max,min,deriv'>trans func</td>
		<td><span class='time_laps editable'>laps</span> sec</td>
		<td class='comp_op editable_choice' choices='&lt;,&gt;'>comp op</td>
		<td class='thresh_value editable' cond_id=''>threshold</td>
		<td class='remove_cond'></td>
		<td class='op_col' op_id=''></td>
		<td class='then_col'></td>
		<td class='action_col editable_choice' choices='Add node,Remove node'>action</td>
		<td class='node_selection'>rand</td>
	</tr>
	
	<TMPL_LOOP NAME=RULES>
		<TMPL_LOOP NAME=CONDITIONS>
			<tr class="rule">
			<td class='indicator_name editable_choice' choices='<TMPL_VAR NAME=VAR_CHOICES>'><TMPL_VAR NAME=VAR></td>
			<td class='trans_func editable_choice' choices='mean,max,min,deriv'>mean</td>
			<td><span class='time_laps editable'><TMPL_VAR NAME=TIME_LAPS></span> sec</td>
			<td class='comp_op editable_choice' choices='&lt;,&gt;'><TMPL_IF NAME=INF>&lt;<TMPL_ELSE>&gt;</TMPL_IF></td>
			<td class='thresh_value editable' cond_id='<TMPL_VAR NAME=OP_ID>'><TMPL_VAR NAME=VALUE></td>
			<td class='remove_cond'></td>
			<TMPL_IF NAME=MASTER_ROW>
				<TMPL_IF NAME=BIN_OP>
					<td class='operator' op_id='<TMPL_VAR NAME=OP_ID>' rowspan='<TMPL_VAR NAME=SPAN>'><TMPL_VAR NAME=BIN_OP></td>
				<TMPL_ELSE>
					<td class='op_col' op_id='<TMPL_VAR NAME=OP_ID>'></td>
				</TMPL_IF>
				<td class='then_col' rowspan='<TMPL_VAR NAME=SPAN>'></td>
				<td class='action_col editable_choice' choices='Add node,Remove node' rowspan='<TMPL_VAR NAME=SPAN>'><TMPL_VAR NAME=ACTION></td>
				<td class='node_selection' rowspan='<TMPL_VAR NAME=SPAN>'>rand</td>
			</TMPL_IF>
			</tr>
		</TMPL_LOOP>
	</TMPL_LOOP>
		
</table>	

<table id="optim_table" class='simplelisting rulesview'>
	<caption>Scale down conditions</caption>
	<tr id='rules_head'><th colspan='6'>Condition</th></tr>
	
	<tr id='condition_model' class="hidden">
		<td class='indicator_name editable_choice' choices='<TMPL_VAR NAME=VAR_CHOICES>'>indicator</td>
		<td class='trans_func editable_choice' choices='mean,max,min,deriv'>trans func</td>
		<td><span class='time_laps editable'>laps</span> sec</td>
		<td class='comp_op editable_choice' choices='&lt;,&gt;'>comp op</td>
		<td class='thresh_value editable' cond_id=''>threshold</td>
		<td class='remove_cond'></td>
		<td class='op_col' op_id=''></td>
	</tr>
	
	<TMPL_LOOP NAME=OPTIM_CONDITIONS>
		<tr class="condition">
		<td class='indicator_name editable_choice' choices='<TMPL_VAR NAME=VAR_CHOICES>'><TMPL_VAR NAME=VAR></td>
		<td class='trans_func editable_choice' choices='mean,max,min,deriv'>mean</td>
		<td><span class='time_laps editable'><TMPL_VAR NAME=TIME_LAPS></span> sec</td>
		<td class='comp_op editable_choice' choices='&lt;,&gt;'><TMPL_IF NAME=INF>&lt;<TMPL_ELSE>&gt;</TMPL_IF></td>
		<td class='thresh_value editable' cond_id='<TMPL_VAR NAME=OP_ID>'><TMPL_VAR NAME=VALUE></td>
		<td class='remove_cond'></td>
		</tr>
	</TMPL_LOOP>
	
</table>

