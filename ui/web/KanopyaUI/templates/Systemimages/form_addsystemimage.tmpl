<html>
<head>
	<title>new system image</title>
</head>
<body>
<style type="text/css">@import url(/css/form.css);</style>
<div class="title">create system image<TMPL_IF NAME=some_errors><span class="error">Some fields below are missing or invalid</span></TMPL_IF></div>
<form method="POST" action="/cgi/kanopya.cgi/systemimages/process_addsystemimage">
<table class="form">
<tr>
	<td class="label">Name :</td>
	<td><input type="text" name="systemimage_name" maxlength="32" size="32"/>
	<span style="color: red"><TMPL_VAR NAME=ERR_SYSTEMIMAGE_NAME></span></td>
</tr>
<tr>
	<td class="label">from a distribution :<input type="radio" name="type" value="distribution" onClick="Duplicate()" checked="checked" /></td>
	<td>
	<select id="duplicate" name="distribution_id">
	<TMPL_LOOP NAME=DISTRIBUTION>
		<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
	</TMPL_LOOP></td>	
	</td>
</tr>
<tr>
	<td class="label">clone a system image :<input type="radio" name="type" value="systemimage" onClick="Clone()" /></td>
	<td>
	<select name="systemimage_id">
	<TMPL_LOOP NAME=SYSTEMIMAGE>
		<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
	</TMPL_LOOP>
	</td>
</tr>
<tr>
	<td class="label">Description :</td>
	<td><textarea cols="50" name="systemimage_desc" value=""></textarea></td> 
</tr>
</table>
<div class="buttons">
<input type="submit" value="ok"/>
<input type="button" value="cancel" onclick="javascript:window.close()"/>
</div>
</form> 
</body>	
</html>
