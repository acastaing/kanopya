<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">@import url(/css/details.css);</style>
<script type="text/javascript" src="/js/extern/jquery.js"></script>
<script type="text/javascript" src="/js/details.js"></script>
<div id="content">
<h2>Host : <TMPL_VAR NAME=motherboard_hostname></h2>
<hr/>
<span id="state" class="title simpleexpand">State</span>
<table id="Xstate" class="detailspart">
<tr><TMPL_IF NAME=active><td>Active</td><TMPL_ELSE><td>Deactivated</td></TMPL_IF>
<td class="actions" rowspan="2">
<TMPL_IF NAME=can_activate>
<a class="imgActivate" href="/cgi/kanopya.cgi/motherboards/process_activatemotherboard?motherboard_id=<TMPL_VAR NAME=motherboard_id>">activate</a><br />
<span class="desc">Activate this motherboard.</span><br /><br /></TMPL_IF>
<TMPL_IF NAME=can_deactivate>
<a class="imgDeactivate" href="/cgi/kanopya.cgi/motherboards/process_deactivatemotherboard?motherboard_id=<TMPL_VAR NAME=motherboard_id>">deactivate</a><br />
<span class="desc">Deactivate this motherboard.</span><br /><br />
</TMPL_IF>
</td></tr>
<tr>
<TMPL_IF NAME=active>
<TMPL_IF NAME=state_up><td><span class="state imgUp">Up on <TMPL_VAR NAME=cluster_name> cluster</span></td></TMPL_IF>
<TMPL_IF NAME=state_down><td><span class="state imgDown">Unused</span></td></TMPL_IF>
<TMPL_IF NAME=state_stopping><td><span class="state imgDown">Stopping...</span></td></TMPL_IF>
<TMPL_IF NAME=state_starting><td><span class="state imgDown">Starting... on <TMPL_VAR NAME=cluster_name> cluster<</span></td></TMPL_IF>
<TMPL_IF NAME=state_broken><td><span class="state imgWarning">unknown</span></td></TMPL_IF>
</TMPL_IF>
<td class="toright">
<TMPL_IF NAME=link_activity>
<a class="imgMonitor" href="/cgi/kanopya.cgi/clusters/view_clustergraphs?cluster_id=<TMPL_VAR NAME=motherboard_id>">activity</a>
</TMPL_IF>
</td></tr>
</table>

<hr/>
<span id="settings" class="title simpleexpand">Main settings</span>
<table id="Xsettings" class="detailspart">
<tr><td class="italic" colspan="4"><TMPL_VAR NAME=motherboard_desc></td>
<td class="actions" rowspan="9">
<TMPL_IF NAME=can_update>
<a class="imgEdit" href="javascript:openform('/cgi/kanopya.cgi/motherboards/form_editmotherboard?motherboard_id=<TMPL_VAR NAME=motherboard_id>', 'edit host', 800, 400, '');">edit</a><br />
<span class="desc">Modify these global parameters.</span><br /><br /></TMPL_IF>
<TMPL_IF NAME=can_delete>
<a class="imgRemove" href="/cgi/kanopya.cgi/motherboards/process_deletemotherboard?motherboard_id=<TMPL_VAR NAME=motherboard_id>">delete</a><br />
<span class="desc">Delete this motherboard.</span><br /><br /></TMPL_IF>
<TMPL_IF NAME=can_setperm>
<a class="imgPermission" href="/cgi/kanopya.cgi/permissions/view_selectconsumer?entitytype=Motherboard&id=<TMPL_VAR NAME=motherboard_id>">permissions</a><br />
<span class="desc">View/set permissiosn for this host.</span><br /><br /></TMPL_IF>
</td><tr/>
<tr><td colspan="4">&nbsp;</td></tr>
<tr><td class="label">Model :</td><td><TMPL_IF NAME=motherboard_model><TMPL_VAR NAME=motherboard_model><TMPL_ELSE>-</TMPL_IF></td>
<td class="label">MAC address :</td><td><TMPL_VAR NAME=motherboard_mac></td></tr>
<tr><td class="label">Processor :</td><td><TMPL_IF NAME=processor_model><TMPL_VAR NAME=processor_model><TMPL_ELSE>-</TMPL_IF></td>
<td class="label">Internal IP :</td><td><TMPL_VAR NAME=motherboard_ip></td></tr>
<tr><td class="label">S/N :</td><td><TMPL_VAR NAME=motherboard_sn></td></tr>
<tr><td class="label">Power Supply Card :</td><td><TMPL_IF NAME=motherboard_powersupply>
<TMPL_VAR NAME=motherboard_powersupply> <TMPL_ELSE>none</TMPL_IF>
</td></tr>
<tr><td colspan="2">&nbsp;</td></tr>
<tr><td class="label">Kernel :</td><td><TMPL_IF NAME=motherboard_kernel><TMPL_VAR NAME=motherboard_kernel><TMPL_ELSE>-</TMPL_IF></td></tr>
</table>

<hr />
<span id="harddisks" class="title simpleexpand">Hard disks</span>
<table id="Xharddisks" class="detailspart list">
<TMPL_IF NAME=harddisks_list>
<tr><td colspan="2">&nbsp;</td>
<td class="actions" rowspan="<TMPL_VAR NAME=nbharddisks>">
<TMPL_IF NAME=can_addHarddisk>
<a class="imgAdding" href="javascript:openform('/cgi/kanopya.cgi/motherboards/form_addharddisk?motherboard_id=<TMPL_VAR NAME=motherboard_id>', 'add harddisk', 600, 130, '');">add hard disk</a><br />
<span class="desc">Add a hard disk to this motherboard.</span><br /><br /></TMPL_IF>
</td></tr>
<TMPL_LOOP NAME=harddisks_list>
<td class="label2">device: <TMPL_VAR NAME=harddisk_device></td>
<td class="action"><TMPL_IF NAME=link_removeharddisk><a class="imgRemove" href="/cgi/kanopya.cgi/motherboards/process_removeharddisk?harddisk_id=<TMPL_VAR NAME=harddisk_id>&motherboard_id=<TMPL_VAR NAME=motherboard_id>">remove</a>
</TMPL_IF></td></tr>
</TMPL_LOOP>
<TMPL_ELSE>
<tr><td colspan="2">&nbsp;</td>
<td class="actions">
<TMPL_IF NAME=can_addHarddisk>
<a class="imgAdding" href="javascript:openform('/cgi/kanopya.cgi/motherboards/form_addharddisk?motherboard_id=<TMPL_VAR NAME=motherboard_id>', 'add harddisk', 600, 200, '');">add hard disk</a><br />
<span class="desc">Add a hard disk to this motherboard.</span></TMPL_IF>
</td></tr>
<tr><td>This motherboard has no hard disk</td></tr>
</TMPL_IF>
</table>
</div>
