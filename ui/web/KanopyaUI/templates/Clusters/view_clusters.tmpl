<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">@import url(/css/listing.css);</style>
<div id="content">
<TMPL_LOOP NAME=clusters_list>
<table class="listing">
<tr><td colspan="3"><h1><TMPL_VAR NAME=cluster_name></h1></td></tr>
<tr><td><span class="darkgreen">Type</span> : <TMPL_VAR NAME=type></td><td><span class="darkgreen">Status</span> : 
<TMPL_IF NAME=active>Active<TMPL_ELSE>Deactivated</TMPL_IF></td><td class="toright">
<a class="imgManage" href="/cgi/kanopya.cgi/clusters/view_clusterdetails?cluster_id=<TMPL_VAR NAME=cluster_id>">details</a></td></tr>
<tr><td><span class="darkgreen">Size</span> : <TMPL_VAR NAME=nbnodes></td>
<TMPL_IF NAME=active>
<td><span class="darkgreen">State</span> :
<TMPL_IF NAME=state_up><span class="state imgUp">Up (<TMPL_VAR NAME=nbnodesup>)</span></TMPL_IF>
<TMPL_IF NAME=state_down><span class="state imgDown">Down</span></TMPL_IF>
<TMPL_IF NAME=state_starting><span class="state imgDown">Starting...</span></TMPL_IF>
<TMPL_IF NAME=state_stopping><span class="state imgDown">Stopping...</span></TMPL_IF>
</td>
</TMPL_IF>
<td class="toright">
<TMPL_IF NAME=link_activity>
<a class="imgMonitor" href="/cgi/kanopya.cgi/monitoring/view_clustermonitoring?cluster_id=<TMPL_VAR NAME=cluster_id>">activity</a>
</TMPL_IF>
</td></tr>
<tr><td class="italic" colspan="3"><span class="darkgreen">Description</span> : <TMPL_VAR NAME=cluster_desc></td></tr>
</table>
</TMPL_LOOP>

<div class="actions">
<TMPL_IF NAME=can_create>
<a class="action imgAdding" href="javascript:openform('/cgi/kanopya.cgi/clusters/form_addcluster', 'create a new cluster', 800, 480,'toolbar=no, menubar=no, scrollbars=no, resizable=no, location=no, directories=no, status=no')">create a cluster</a>
<p class="italic">Create and configure a new cluster.</p></TMPL_IF>
</div>
</div>
<TMPL_INCLUDE NAME="footer.tmpl">

