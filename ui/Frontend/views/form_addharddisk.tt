<h2>Create a new disk</h2>

<form id="target" method="POST" action="/infrastructures/hosts/<% host_id %>/addharddisk">
<table class="form">
	<tr>
		<td class="label">Device :</td>
		<td><input type="text" name="device" size="32"/>
		<span style="color: red"><% err_device %></span></td>
		</td>
	</tr>
</table>
<div class="buttons">
<input type="hidden" name="host_id" value="<% host_id %>"/>
</div>
</form> 
