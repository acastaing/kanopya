<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-type" content="text/html; charset=<% settings.charset %>" />
        <title><% title_page %></title>
        <link rel="stylesheet" href="<% request.uri_base %>/css/normalize.css" />
        <link rel="stylesheet" href="<% request.uri_base %>/css/global.css" />
        <link rel="stylesheet" href="<% request.uri_base %>/css/misc.css" />
        <% FOREACH css IN css_head %>
            <link rel="stylesheet" href="<% request.uri_base %>/css/<% css %>" />
        <% END %>

        <script type="text/javascript" src="/javascripts/kanopyaui-tools.js"></script>
        <script type="text/javascript" src="/javascripts/jquery.js"></script>

        <% FOREACH js IN js_head %>
            <script type="text/javascript" src="/javascripts/<% js %>"></script>
        <% END %>

        <script language="javascript" type="text/javascript">
            $(document).ready(function() {
                $("#container_messages").click(function() {
                $("#messages").toggle();
            });
                var messages_ajax = function() {
                    $.ajax({
                        url: "/messages",
                        type: "POST",
                        dataType: "json",
                        success: function(msg){
                            console.log(msg);
                            $("#messages").empty();
							for(var i=0;i<msg.length;i++) {
								$("#messages").append(msg[i].content+"<br/>");
								
							}
                           
                        },
                        error: function(error, text, thor) {
                        $("#messages").empty();
                        $("#messages").append(text+" "+error);
                        }
                    });
                };
                setInterval(messages_ajax, 10000);
            });
        </script>
    </head>
    <body>
        <div id="header">
            <img id="smalllogo" src="/images/kanopya_small_logo.png" />
            <div id="menu">
                <ul>
                    <li><a href="/dashboard/status" <% menu_selection('dashboard') %>>Dashboard</a></li>
                    <li><a href="/rights/users" <% menu_selection('rights') %>>Rights</a></li>
                    <li><a href="/infrastructures/hosts" <% menu_selection('infrastructures') %>>Infrastructures</a></li>
                    <li><a href="/systems/kernels" <% menu_selection('systems') %>>Systems</a></li>
                    <li><a href="/architectures/clusters" <% menu_selection('architectures') %>>Architectures</a></li>
                </ul>
            </div>
            
            <div id="submenu">
                <ul>
                    <% IF is_menu_selected('dashboard') %>
                        <li><a href="/dashboard/status" <% submenu_selection('status') %>>Status</a></li>
                        <li><a href="/dashboard/logs" <% submenu_selection('logs') %>>Logs</a></li>
                    <% ELSIF is_menu_selected('rights') %>
                        <li><a href="/rights/users" <% submenu_selection('users') %>>Users</a></li>
                        <li><a href="/rights/groups" <% submenu_selection('groups') %>>Groups</a></li>
                        <li><a href="/rights/permissions" <% submenu_selection('permissions') %>>Permissions</a></li>
                    <% ELSIF is_menu_selected('infrastructures') %>
                        <li><a href="/infrastructures/hosts" <% submenu_selection('hosts') %>>Hosts</a></li>
                        <li><a href="/infrastructures/models" <% submenu_selection('models') %>>Models</a></li>
                        <li><a href="/infrastructures/powersupply" <% submenu_selection('powersupply') %>>Power supply cards</a></li>
                    <% ELSIF is_menu_selected('systems') %>
                        <li><a href="/systems/kernels" <% submenu_selection('kernels') %>>Kernels</a></li>
                        <li><a href="/systems/distributions" <% submenu_selection('distributions') %>>Distributions</a></li>
                        <li><a href="/systems/components" <% submenu_selection('components') %>>Components</a></li>
                        <li><a href="/systems/images" <% submenu_selection('images') %>>System images</a></li>
                     <% ELSIF is_menu_selected('architectures') %>
                        <li><a href="/architectures/clusters" <% submenu_selection('clusters') %>>Clusters</a></li>
                        <li><a href="/architectures/networks" <% submenu_selection('networks') %>>Networks</a></li>
                    <% END %>
                </ul>
            </div>
            
            <div id="infologin">
                logged as <span class="bold"><% username %></span>
            </div>

            <div class="logout">
                <a href="/logout">Logout</a>
            </div>
        </div>

        <div id="container">
            <div id="content">
                <% content %>
            </div>
            <div id="container_messages">
                messages
                <div id="messages" style="diplay: none;">
                </div>
            </div>

            <div id="footer">
                Powered by <a href="http://hederatech.org/">Hedera Technology</a>
            </div>
        </div>
    </body>
</html>
