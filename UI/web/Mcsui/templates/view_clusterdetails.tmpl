<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">
	@import url(/css/listing.css);
</style>
<div id="content">
	<h1>Cluster components: </h1>
	<table id="clustercomponentsdetails" class="listview">
		<tr><th>name</th><th>version</th><th>category</th></tr>
			<TMPL_LOOP NAME=COMPONENTS>
				<tr><td><TMPL_VAR NAME=NAME></td>
				<td><TMPL_VAR NAME=VERSION></td>
				<td><TMPL_VAR NAME=CATEGORY></td></tr>
			</TMPL_LOOP>
	</table>
	<h1>Cluster nodes: </h1>
	<form method="GET" action="/cgi/mcsui.cgi/clusters/process_addnode">
	<table style="float: left; clear: left;"><tr><td>
	<input type="hidden" name="cluster_id" value="<TMPL_VAR NAME=CLUSTERID>" />
	<input type="submit" value="add a new node" /></td></tr>
	</table>
	</form>
	<table id="clustermotherboardsdetails" class="listview">
		<tr><th></th><th>hostname</th><th>Motherboard slot number</th><th>internal ip</th><th>actions</th></tr>
			<TMPL_LOOP NAME=MOTHERBOARDS>
				<tr>
				<td id="m<TMPL_VAR NAME=HOSTNAME>" class="expanddown">&nbsp;</td>
				<td><TMPL_VAR NAME=HOSTNAME></td>
				<td><TMPL_VAR NAME=SLOTNUMBER></td>
				<td><TMPL_VAR NAME=INTERNALIP></td>
				<td><a href="/cgi/mcsui.cgi/clusters/process_removenode?cluster_id=<TMPL_VAR NAME=CLUSTER_ID>&motherboard_id=<TMPL_VAR NAME=MOTHERBOARD_ID>">remove this node</a></td>
				</tr>
				
				<tr id="t<TMPL_VAR NAME=HOSTNAME>" class="hidden">
					<td colspan="5">
						<table class="listdetails">
						<TMPL_LOOP NAME=GRAPHS>	
							<tr><td ALIGN=CENTER>
				      			<img src="<TMPL_VAR NAME=CUSTOM_GRAPH_FILE>" class="graph multi_graph custom_graph" style='display:none' />
				      			<img src="<TMPL_VAR NAME=HOUR_GRAPH_FILE>" class="graph multi_graph hour_graph" />
				      			<img src="<TMPL_VAR NAME=DAY_GRAPH_FILE>" class="graph multi_graph day_graph" style='display:none'/>
							</td></tr>
						</TMPL_LOOP>
						</table>
					</td>
				</tr>
				
				
			</TMPL_LOOP>
	</table>
	
	<a name="monitoring"><h1>Monitoring: </h1></a>
	<!--table id="graph_table"-->
	<table style="float: left; clear: left;">
		<tr>
			<th><input type="radio" name="graph_timeline" value="Hourly" id="radioHour" onclick="display_graph('hour_graph')" />Hourly
			<input type="radio" name="graph_timeline" value="Daily" id="radioDay" onclick="display_graph('day_graph')" />Daily
			<input type="radio" name="graph_timeline" value="Custom" id="radioCustom" onclick="display_graph('custom_graph')" />Custom</th>
		</tr>
		<tr>
			<th>
			<form method="GET" action="/cgi/mcsui.cgi/clusters/process_customgraph">
				<input type="hidden" name="cluster_id" value="<TMPL_VAR NAME=CLUSTERID>" />
				start: <input type="text" size="8" name="date_start" value="<TMPL_VAR NAME=CUSTOM_GRAPH_DATE_START>" > <input type="text" size ="3" name="time_start" value="<TMPL_VAR NAME=CUSTOM_GRAPH_TIME_START>" >
				end: <input type="text" size="8" name="date_end" value="<TMPL_VAR NAME=CUSTOM_GRAPH_DATE_END>" > <input type="text" size ="3" name="time_end" value="<TMPL_VAR NAME=CUSTOM_GRAPH_TIME_END>" >
				<input type="submit" value="apply" /></td></tr>
			</form>
			</th>
		</tr>
	</table>
	<table class="listview">
		<!--tr>
			<th ALIGN=CENTER>Set</th>
			<th ALIGN=CENTER>Evolution</th>
		</tr-->
		<TMPL_LOOP NAME=MONITORING_GRAPHS>
			<tr>
				<td><TMPL_VAR NAME=GRAPH_INFO></td>
				<TMPL_IF NAME=HIDDEN>
					<td id="m<TMPL_VAR NAME=GRAPH_INFO>" class="expanddown">&nbsp;</td>
				</TMPL_IF>
			</tr>
			
			<tr id="t<TMPL_VAR NAME=GRAPH_INFO>" <TMPL_IF NAME=HIDDEN>class="hidden"</TMPL_IF> >
				<td>
					<TMPL_LOOP NAME=GRAPH_TYPE>
		      			<img src="<TMPL_VAR NAME=CUSTOM_GRAPH_FILE>" class="graph multi_graph custom_graph" style='display:none' />
		      			<img src="<TMPL_VAR NAME=HOUR_GRAPH_FILE>" class="graph multi_graph hour_graph" style='display:none' />
		      			<img src="<TMPL_VAR NAME=DAY_GRAPH_FILE>" class="graph multi_graph day_graph" style='display:none'/>
					</TMPL_LOOP>
				</td>
			</tr>	
				
		</TMPL_LOOP>
		<tr><td><b>> Add custom graph <</b></td</tr>
		<tr><td><b>> Monitored indicators settings <</b></td></tr>
	</table>

	<h1>Orchestration: </h1>
	<table class="listview">
	<tr>
      		<td ALIGN=CENTER><img class="graph" src='<TMPL_VAR NAME=ORCHESTRATOR_GRAPH_ADD>'/></td>
      		<td ALIGN=CENTER><img class="graph" src='<TMPL_VAR NAME=ORCHESTRATOR_GRAPH_REMOVE>'/></td>
	</tr>
	
	</table>
		
</div>
<script language="Javascript" src="/js/listingtools.js"></script>
<!--script language="Javascript">display_graph('<TMPL_VAR NAME=DISPLAY_GRAPH>')</script-->
<script language="Javascript">document.getElementById(<TMPL_IF NAME=SHOW_CUSTOM_GRAPH>"radioCustom"<TMPL_ELSE>"radioHour"</TMPL_IF>).click()</script>
<TMPL_INCLUDE NAME="footer.tmpl">
