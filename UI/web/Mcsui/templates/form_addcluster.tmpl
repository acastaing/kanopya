<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">@import url(/css/form.css);</style>

<div id="content">
<form method="POST" action="/cgi/mcsui.cgi/motherboards/process_addmotherboard">
<table class="form">
	<caption>New cluster</caption>
	<TMPL_IF NAME=SOME_ERRORS>
	<tr><td class="error" colspan="2">Some fields below are missing or invalid</td></tr>
	</TMPL_IF>
	<tr>
		<td class="label">Name :</td>
		<td><input type="text" name="active" maxlength="50" size="52"/>
	</tr>
	<tr>
		<td class="label">Description :</td>
		<td><textarea cols="50" name="desc" value=""></textarea></td> 
	</tr>
	<tr>
		<td class="label">minimum node number :</td>
		<td><input type="text" name="active" maxlength="5" size="5"/>
	</tr>
	<tr>
		<td class="label">maximum node number :</td>
		<td><input type="text" name="active" maxlength="5" size="5"/>
	</tr>
	<tr>
		<td class="label">Priority :</td>
		<td><input type="text" name="active" maxlength="5" size="5"/>
	</tr>
	<tr>
		<td class="label">System image :</td>
		<td><select name="systemimage">
		<TMPL_LOOP NAME=SYSTEMIMAGES>
			<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
		</TMPL_LOOP>	
		</select><a class="simple" href="/cgi/mcsui.cgi/models/form_addsystemimage">no found ?</a></td>
	</tr>
	<tr>
		<td class="label">Kernel :</td>
		<td><select name="kernel">
		<option value="0">default motherboard kernel</option>
		<TMPL_LOOP NAME=KERNELS>
			<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
		</TMPL_LOOP>	
		</select><a class="simple" href="/cgi/mcsui.cgi/models/form_addkernel">no found ?</a></td>
	</tr>
</table>
<div class="formbuttons">
	<input class="button" type="reset" value="clear" />
	<a class="button" href="/cgi/mcsui.cgi/clusters">cancel</a>
	<input class="button" type="submit" value="add" />
</div>
</form> 
</div>
<TMPL_INCLUDE NAME="footer.tmpl">
