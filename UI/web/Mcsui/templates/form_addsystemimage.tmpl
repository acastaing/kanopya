<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="menu.tmpl">
<style type="text/css">@import url(/css/form.css);</style>

<div id="content">
	<form method="POST" action="/cgi/mcsui.cgi/systemimages/process_addsystemimage">
	<table id="addsystemimage" class="form">
		<caption>New system image</caption>
		<TMPL_IF NAME=SOME_ERRORS>
		<tr><td class="error" colspan="2">Some fields below are missing or invalid</td></tr>
		</TMPL_IF>
		<tr>
		<td class="label">Name :</td>
		<td><input type="text" name="systemimage_name" maxlength="50" size="52"/>
		<span style="color: red"><TMPL_VAR NAME=ERR_SYSTEMIMAGE_NAME></span></td>
	</tr>
		<tr>
			<td class="label">from a distribution :<input type="radio" name="type" value="distribution" onClick="Duplicate()" checked="checked" /></td>
			<td>
			<select id="duplicate" name="distribution_id">
			<TMPL_LOOP NAME=DISTRIBUTION>
				<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
			</TMPL_LOOP></td>	
			</td>
		</tr>
		<tr>
			<td class="label">clone a system image :<input type="radio" name="type" value="systemimage" onClick="Clone()" /></td>
			<td>
			<select name="systemimage_id">
			<TMPL_LOOP NAME=SYSTEMIMAGE>
				<option value="<TMPL_VAR NAME=ID>"><TMPL_VAR NAME=NAME></option>
			</TMPL_LOOP>
			</td>
		</tr>
		<tr>
			<td class="label">Description :</td>
			<td><textarea cols="50" name="systemimage_desc" value=""></textarea></td> 
		</tr>
	</table>
	<div class="formbuttons">
		<input class="button" type="reset" value="clear" />
		<a class="button" href="/cgi/mcsui.cgi/systemimages">cancel</a>
		<input class="button" type="submit" value="add" />
	</div>
	</form> 
</div>
<TMPL_INCLUDE NAME="footer.tmpl">
