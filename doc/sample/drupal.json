{
  name:'drupal',
  version:'7.8',
  size:{
    min:'2',
    max:'4',
  },
  response_time:'200',
  domain_name:'mondrupal.fr',
  public_ip:'192.168.55.1',
  public_port:{tcp:['80']},
  tier_number:'2',
  tier:[ 
    {
      name:'frontend',
      rank:'1',
      data:
      [
        {
          repository:'git://git.kanopya.org/infra/drupal_7.8_frontend.git',
          mount_point:'/opt/srv'
        },
      ],
      component_list:[
        {
          name:'Keepalived',
          version:'1',
          conf:{
            daemon_method:'BOTH',
            notification_email:'test@ht.com',
            notification_email_from:'ht@ht.com',
            smtp_server:'smtp.bbox.fr',
            smtp_connect_timeout:'10',
          },
        },
        {
          name:'Apache',
          version:'2',
          conf:{
            apache2_loglevel:'WARN',
            apache2_serverroot:'/var/www',
            apache2_ports:'80',
            apache2_sslports:'443',
            apache2_virtualhosts:[
              {
                apache2_virtualhost_servername:'mondrupal.fr',
                apache2_virtualhost_sslenable:'1',
                apache2_virtualhost_serveradmin:'toto@ht.com',
                apache2_virtualhost_documentroot:'/opt/srv/',
                apache2_virtualhost_log:'/tmp/apache2.log',
                apache2_virtualhost_errorlog:'/tmp/apache2_error.log',
              },
            ],
          },
        },
        {
          name:'Php',
          version:'5',
          conf:{
            php5_session_handler='memcache',
            php5_session_path=''
          }
        },
        {
          name:'Memcached',
          version:'1',
          conf:{
             memcached1_port:'11211',
          }
        }
      ]
    },
    {
      name:'backend',
      rank:'2',
      component_list:[
        {
          name:'Mysql',
          version:'5',
          conf:{
            mysql5_port:'3306',
            mysql5_datadir:'/var/lib/mysql',
          },
        },
    },
  ],
}