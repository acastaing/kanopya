XNAME = [% name %]
MEMORY = [% memory %]
CPU = 1
VCPU = [% cpu %]

[% IF hypervisor_name %]
REQUIREMENTS = "NAME = \"[% hypervisor_name %]\""
[% END %]

OS = [
	ARCH = x86_64,
    ROOT = sda1,
    BOOT = hd
]

DISK = [ IMAGE_ID = [% image_id %] ]
	
[% FOREACH iface IN interfaces %]
NIC = [
	MAC = [% iface.mac %],
    NETWORK_ID = [% iface.network_id %],
	MODEL = virtio
]
[% END %]

GRAPHICS = [
	TYPE = vnc,
	LISTEN = 0.0.0.0
]



